<div class="form-container">
    <%= form_with model:[@current, @current.posts.build], method: :post, local: true do |form| %>


    <div class="form-group">
        <%= form.label :title, "Title", class:"form-label" %>
        <%= form.text_field :title, :placeholder => "Add your title...", required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :text,"Add new Post", class:"form-label"%>
        <%= form.text_area :text, size: "50x10", :placeholder => "Write...",  required: true, class: 'form-control'  %>
    </div>

  <%= form.submit "Save Post", class: 'btn btn-primary mt-4' %>
<% end %>
</div>